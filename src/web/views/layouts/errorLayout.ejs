    <meta
      name="description"
      content="Une erreur est survenue lors de l'accès à cette page."
    />

    <!-- Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
