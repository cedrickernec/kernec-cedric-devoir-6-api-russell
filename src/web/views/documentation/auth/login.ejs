<!-- ======================================================
  AUTH - LOGIN
  ========================================================= -->

<div class="route-block">
  <p id="login">
    <span class="method">POST</span> <code>/api/auth/login</code> - Se connecter
  </p>

  <!-- ========== SUCCESS ========== -->
  <details>
    <summary>Réponses valides</summary>

    <p class="example-title">Exemple requête :</p>
    <pre><code>{
    "email": "john@doe.com",
    "password": "Password123!"
}</code></pre>

    <p class="example-title">
      Réponse <span class="badge badge--success">200 OK</span> :
    </p>
    <pre><code>{
    "success": true
    "message": "Connexion réussie",
    "token": "xxxx.yyyy.zzzz"
    "user": {
        "id": "...",
        "username": "John",
        "email": "john@doe.com"
    }
}</code></pre>
  </details>

  <!-- ========== ERRORS ========== -->
  <details>
    <summary>Erreurs possibles</summary>

    <p class="example-title">
      Erreur <span class="badge badge--error">400 Bad Request</span> :
    </p>

    <!-- CHAMP NON AUTORISÉ -->
    <p class="error-type">Champ(s) non autorisé(e)</p>

    <pre><code>{
    "success": false,
    "error": "Champ(s) non autorisé(s) : nom_du_champ."
}</code></pre>

    <!-- CHAMPS REQUIS -->
    <p class="error-type">Email et mot de passe requis</p>

    <pre><code>{
    "success": false
    "error": "Email et mot de passe requis."
}</code></pre>

    <p class="example-title">
      Erreur <span class="badge badge--error">401 Unauthorized</span> :
    </p>

    <!-- CHAMPS INVALIDE -->
    <p class="error-type">Email ou mot de passe incorrect</p>

    <pre><code>{
    "success": false
    "error": "Email ou mot de passe incorrect."
}</code></pre>
  </details>
</div>
