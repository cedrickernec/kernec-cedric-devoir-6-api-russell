<h1 id="page-title">Détails catway</h1>

<section class="detail-card" aria-labelledby="page-title">
  <dl class="detail-list">
    <div class="detail-row">
      <dt>Numéro</dt>
      <dd><%= catway.catwayNumber %></dd>
    </div>

    <div class="detail-row">
      <dt>Type</dt>
      <dd><%= catway.catwayType %></dd>
    </div>

    <div class="detail-row">
      <dt>État</dt>
      <dd>
        <span
          class="status <%= catway.state.className %>"
          aria-label="<%= catway.state.aria %>"
          role="status"
          >
          <%= catway.state.label %>
        </span>
      </dd>
    </div>

    <div class="detail-row">
      <dt>Créé le</dt>
      <dd class="muted">
        <%= catway.createdAtFormatted %>
      </dd>
    </div>
  </dl>

  <div class="detail-action" aria-label="Actions catway">
    <a
      href="/catways"
      class="btn btn--primary"
      aria-label="Retour à la liste des catways"
    >
      <i class="fa-solid fa-arrow-left"></i>
      Retour à la liste
    </a>
    <% if (from === "reservation" && reservationId) { %>
    <a
      href="/reservations/<%= reservationId %>"
      class="btn btn--primary"
      aria-label="Retour à la réservation"
    >
      <i class="fa-solid fa-arrow-right" aria-hidden="true"></i>
      Retour à la réservation
    </a>
    <% } %>
    <a
      href="/catways/<%= catway.catwayNumber %>/edit"
      class="btn btn--primary"
      aria-label="Éditer le catway numéro <%= catway.catwayNumber %>"
      title="Éditer le catway"
    >
      <i class="fa-solid fa-pen"></i>
      Éditer
    </a>
  </div>
</section>
