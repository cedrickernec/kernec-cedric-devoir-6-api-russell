<section>
  <div class="error-card error-card--danger">
    <span class="error-code">500</span>

    <h1 id="error-title" class="error-title">Erreur interne</h1>

    <p class="error-message">
      Une erreur est survenue côté serveur. Merci de réessayer ultérieurement.
    </p>

    <div class="error-actions">
      <% if (showBack) { %>
      <button type="button" onclick="history.back()" class="btn btn--primary">
        <i class="fa-solid fa-arrow-left" aria-hidden="true"></i>
        Page précédente
      </a>
      <% } %>

      <% if (showLogout) { %>
      <a href="/auth/logout" class="btn btn-danger"> Se déconnecter </a>
      <% } %>
    </div>
  </div>
</section>
