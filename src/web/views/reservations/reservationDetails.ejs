<h1 id="page-title">Détails de la réservation</h1>

<section class="detail-card" aria-labelledby="page-title">
  <dl class="detail-list">
    <div class="detail-row">
      <dt>Statut</dt>
      <dd>
        <span
          class="status <%= reservation.status.className %>"
          role="status"
          aria-label="<%= reservation.status.aria %>"
        >
          <%= reservation.status.label %>
        </span>
      </dd>
    </div>

    <div class="detail-row">
      <dt>Client</dt>
      <dd><%= reservation.clientName %></dd>
    </div>

    <div class="detail-row">
      <dt>Bateau</dt>
      <dd><%= reservation.boatName %></dd>
    </div>

    <div class="detail-row">
      <dt>Catway</dt>
      <dd>
        <a
          href="/catways/<%= reservation.catway.number %>?from=reservation&id=<%= reservation.id %>"
          class="link"
          aria-label="Voir le catway <%= reservation.catway.number %>"
          title="Afficher le catway"
        >
          #<%= reservation.catway.number %> (<%= reservation.catway.type %>)
          <i
            class="fa-solid fa-arrow-up-right-from-square"
            aria-hidden="true"
          ></i>
        </a>
      </dd>
    </div>

    <div class="detail-row">
      <dt>Période</dt>
      <dd>
        Du <span class="bold"><%= reservation.startDateFormatted %></span> au
        <span class="bold"><%= reservation.endDateFormatted %></span>
      </dd>
    </div>

    <div class="detail-row">
      <dt>Durée</dt>
      <dd><%= reservation.duration %></dd>
    </div>

    <div class="detail-row">
      <dt>Créée le</dt>
      <dd class="muted"><%= reservation.createdAtFormatted %></dd>
    </div>
  </dl>

  <div class="detail-action" aria-label="Actions réservation">
    <a
      href="/reservations"
      class="btn btn--primary"
      aria-label="Retour à la liste des réservations"
    >
      <i class="fa-solid fa-arrow-left" aria-hidden="true"></i>
      Retour à la liste
    </a>

    <a
      href="/reservations/<%= reservation.id %>/edit"
      class="btn btn--primary"
      aria-label="Éditer la réservation"
      title="Éditer la réservation"
    >
      <i class="fa-solid fa-pen" aria-hidden="true"></i>
      Éditer
    </a>
  </div>
</section>
