<dl class="side-panel-list">
  <div class="side-panel-row">
    <dt>Numéro</dt>
    <dd><%= entity.number %></dd>
  </div>

  <div class="side-panel-row">
    <dt>Type</dt>
    <dd><%= entity.type %></dd>
  </div>

  <div class="side-panel-row">
    <dt>État</dt>
    <dd>
      <span
        class="status status--plain <%= entity.status.className %>"
        role="status"
        aria-label="<%= entity.status.aria %>"
      >
        <%= entity.status.label %>
      </span>
    </dd>
  </div>

  <div class="side-panel-row">
    <dt>Créé le</dt>
    <dd class="muted"><%= entity.createdAtFormatted %></dd>
  </div>
</dl>
